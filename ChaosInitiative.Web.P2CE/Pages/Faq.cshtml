@page
@model ChaosInitiative.Web.P2CE.Pages.FaqModel
@{
    ViewData["Title"] = "FAQ";
}

    
<div class="bg-primary-alt pt-6 pb-3">
    <div class="container">
        <h1>Frequently asked Questions</h1>
        <p class="text-dark">Your question might already be answered here. If not, feel free to ask!</p>
        
        <div>
            <ol class="smooth-scroll">
                @foreach (var faq in Model.faqs)
                {
                    <li>
                        <a class="text-dark" href="#@faq.ElementId">@faq.Question</a>
                    </li>
                }
            </ol>
        </div>
        
    </div>
</div>
        
<div class="pt-3 pb-2">
    <div class="container">
        
        @{
            int index = 1;
            foreach (var faq in Model.faqs)
            {
                <div id="@faq.ElementId" class="pt-3">
                    <h2>@(index++). @faq.Question</h2>
                    <p>@faq.Answer</p>
                </div>
            }
        }
        
    </div>
</div>

<script>
    
    // This code is to add a smooth scroll when clicking on the faq links
    $(document).ready(function() {
    
        $("a[href*='#']").click(function(event){     
            event.preventDefault();
            $('html,body').animate({
                scrollTop: $(this.hash).offset().top - 130 // 130 offset upwards. This is because our sticky navbar overlays everything and it text that was clicked would be under it which is dumb
            }, 500);
        });
               
        // document ready  
    });
</script>
