@using ChaosInitiative.Web.Shared
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="Portal 2: Community Edition - @ViewData["Title"]">
    <meta name="description" content="@ViewData["Description"]">
    <title>Portal 2: Community Edition - @ViewData["Title"]</title>
    <link rel="stylesheet" href="css/boosted_p2ce.min.css">
    <link rel="stylesheet" href="css/p2ce.css">
    <link rel="icon" type="image/png" sizes="16x16" href="img/icon/favicon_16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="img/icon/favicon_32.png">
    <link rel="icon" type="image/png" sizes="64x64" href="img/icon/favicon_64.png">
    <link rel="icon" type="image/png" sizes="128x128" href="img/icon/favicon_128.png">
    <link>
    <script src="https://cdn.jsdelivr.net/npm/what-input@5.2.10/dist/what-input.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/boosted@4.5.3/dist/js/boosted.bundle.min.js" integrity="sha384-hQFBUEXKv1tPjGNFpCctXthNheXFWEyT+cKHsR5+8VYwGoe2L0SIaDNXDpE1LlTK" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3c465cbf36.js" crossorigin="anonymous"></script>
</head>
<body>

<div class="h-100 d-flex flex-column">
    
    <div id="banner">
        <div class="container">
            <div class="row align-content-center">
                <div class="col col-sm-11 col-md-10 col-lg-8">
                    <a href="/">
                        <img src="img/logo.png" id="logo" alt="Logo" class="img-fluid">
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="bg-dark sticky-top">
        <div class="container">
    
            <header role="banner">
                <nav role="navigation" class="navbar navbar-dark navbar-expand-md">
                    <div class="container">
                        <button class="navbar-toggler"
                                type="button"
                                data-toggle="collapse"
                                data-target="#collapsing-navbar"
                                aria-controls="navbarToggle"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-betwee" id="collapsing-navbar">
                            <ul class="navbar-nav mr-auto">
                                @{
                                    Dictionary<string, string> navbar = NavbarP2CE.GetNavbar();
                                    string requestPath = Context.Request.Path.ToString();
                                    foreach (KeyValuePair<string, string> pair in navbar)
                                    {
                                        if (requestPath == pair.Key)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link active" aria-current="page" href="@pair.Key">@pair.Value</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="@pair.Key">@pair.Value</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Constants.LINK_STEAM_STORE_P2CE">
                                        <i class="fab fa-steam navbar-icon"></i>Steam
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Constants.LINK_DISCORD_P2CE">
                                        <i class="fab fa-discord navbar-icon"></i>Discord
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Constants.LINK_GITHUB_P2CE">
                                        <i class="fab fa-github navbar-icon"></i>GitHub
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Constants.LINK_TWITTER_P2CE">
                                        <i class="fab fa-twitter navbar-icon"></i>Twitter
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
    
        </div>
    </div>
    
    <div class="flex-grow-1">
        <div class="h-100 d-flex flex-column">
            <div class="flex-grow-1">
                @RenderBody()
            </div>

            <div class="bg-dark">
                <footer class="container">
                    <div class="row align-content-center">
                        <div class="footer-item col col-12 col-sm-12 col-md-3 col-lg-3">
                            <p class="text-center">
                                <a href="https://chaosinitiative.com">
                                    <img style="width: 40%" src="img/chaos_logofull.png" alt="Chaos Initiative Logo">
                                </a>
                            </p>
                        </div>

                        <div class="footer-item col col-12 col-sm-12 col-md-3 col-lg-3">
                            <p class="text-center" style="font-size: 1rem">Designed by Stefan Heinz &copy; @DateTime.Now.Year</p>
                        </div>

                        <div class="footer-item col col-12 col-sm-12 col-md-3 col-lg-3">
                            <p class="text-center">
                                <a href="brand">Branding</a>
                            </p>
                        </div>

                        <div class="footer-item col col-12 col-sm-12 col-md-3 col-lg-3">
                            <p class="text-center">
                                <a href="privacy">Privacy</a>
                            </p>
                        </div>
                    </div>
                </footer>
            </div>

        </div>
    </div>
    
</div>








</body>
</html>