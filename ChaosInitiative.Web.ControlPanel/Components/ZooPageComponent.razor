        public DateTime Date { get; set; }
        public int Amount { get; set; }
    }

    List<CommitData> _commitData = new()
    {
        new()
        {
            Date = new DateTime(2020, 8, 1),
            Amount = 6
        },
        new()
        {
            Date = new DateTime(2020, 8, 2),
            Amount = 2
        },
        new()
        {
            Date = new DateTime(2020, 8, 3),
            Amount = 1
        },
        new()
        {
            Date = new DateTime(2020, 8, 4),
            Amount = 5
        },
        new()
        {
            Date = new DateTime(2020, 8, 5),
            Amount = 15
        },
        new()
        {
            Date = new DateTime(2020, 8, 6),
            Amount = 29
        }
    };

    class LanguageData
    {
        public string LanguageName { get; set; }
        public int Lines { get; set; }
    }

    List<LanguageData> _languageData = new()
    {
        new()
        {
            LanguageName = "C++",
            Lines = 17000000
        },
        new()
        {
            LanguageName = "C#",
            Lines = 100000
        }
    };

}