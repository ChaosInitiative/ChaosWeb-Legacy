@page
@model IndexModel
@{
    Layout = "Shared/_LayoutBare";
    ViewData["Title"] = "Login";
}

<div class="container">
    
    <section>
        <h1>Chaos Initiative Control Panel</h1>
        
        @if (User.Identity.IsAuthenticated)
        {
            <p>You are logged in as <span class="text-primary">@User.Identity.Name</span>.</p>
            <a asp-page="~/Panel/Dashboard" class="btn btn-primary">
                Enter Dashboard
            </a>
            
            <a asp-controller="Auth" asp-action="Logout" class="btn btn-light">
                Log Out
            </a>
        }
        else
        {
            <p>You are not logged in.</p>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-light"><i class="fab fa-github"></i>Log in with GitHub</a>
        }
   </section>

</div>