<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Chaos Initiative Control Panel</title>
    <partial name="_LayoutHeadPartial"/>
</head>
<body class="bg-gray bg-dark">
<div class="container h-100 position-relative">
    
    <div class="row pt-4 pb-2">
        <div class="col">
            <h1 class="page-title ">
                <img src="~/img/chaos_logo_square.png" alt="Logo of chaos initiative" width="50" height="50"/>
                Control Panel <span>@ViewData["Title"]</span>
            </h1>
        </div>

        <div class="col-auto">
            <div class="d-flex h-100 align-items-end justify-content-end">

                <div>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <partial name="Partials/IdentityCapsulePartial"/>
                        }
                    }
                </div>

            </div>
        </div>
    </div>
        
    <section>
        @RenderBody()
    </section>
    
    <div class="p-1">
        <div class="row">
            <div class="col col-lg">
                <p>Chaos Initiative Control Panel</p>
            </div>
        
            <div class="col col-lg">
                <p class="text-center">Authorized access only</p>
            </div>
        
            <div class="col col-lg">
                <p class="text-center">
                    <a asp-page="/Debug">Debug</a>
                </p>
            </div>
        
            <div class="col col-lg">
                <p class="text-right">
                    <a href="https://www.chaosinitiative.com">Home Page</a>
                </p>
            </div>
        </div>
    </div>
    
</div>

@if (ViewData["UseBlazor"] is bool b && b == true)
{
    <script src="_framework/blazor.server.js"></script>
}
</body>
</html>